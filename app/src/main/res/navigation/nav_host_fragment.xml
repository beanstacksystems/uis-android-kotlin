<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_host_fragment.xml"
    app:startDestination="@id/personalDetailFragment">

    <fragment
        android:id="@+id/attendantFragment"
        android:name="com.bss.uis.presentation.fragment.AttendantDetailsFragment"
        android:label="AttendantFragment"
        tools:layout="@layout/fragment_attendant_details"/>
    <fragment
        android:id="@+id/personalDetailFragment"
        android:name="com.bss.uis.presentation.fragment.PersonalDetailsFragment"
        android:label="PersonalDetailFragment"
        tools:layout="@layout/fragment_personal_details">
        <action
            android:id="@+id/action_personalDetailFragment_to_addressFragment"
            app:destination="@id/addressFragment" />
    </fragment>
    <fragment
        android:id="@+id/addressFragment"
        android:name="com.bss.uis.presentation.fragment.AddressDetailsFragment"
        android:label="AddressFragment"
        tools:layout="@layout/fragment_address_details">
        <action
            android:id="@+id/action_addressFragment_to_medicalHistoryFragment"
            app:destination="@id/medicalHistoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/medicalHistoryFragment"
        android:name="com.bss.uis.presentation.fragment.MedicalDetailsFragment"
        android:label="MedicalHistoryFragment"
        tools:layout="@layout/fragment_medical_details">
        <action
            android:id="@+id/action_medicalHistoryFragment_to_attendantFragment"
            app:destination="@id/attendantFragment" />
    </fragment>
</navigation>