<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_below="@+id/header"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="5dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="5dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_above="@+id/footer">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="15dp">
                        <TextView
                            android:id="@+id/medicalPopUpHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/medical_history"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/spinner_blood_group"
                            style="@style/TextInputLayoutStyleBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/bloodGroup">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/blood_group"
                                style="@style/TextInputStyleBox" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/cancerTypetxtLayout"
                            style="@style/TextInputLayoutStyleBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/cancerType">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/cancerTypetxt"
                                style="@style/TextInputStyleBox" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/TextInputLayoutStyleBox"
                            android:id="@+id/dateOfidentificationLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/identifiedOn">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/dateOfidentification"
                                style="@style/TextInputStyleBox" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/TextInputLayoutStyleBox"
                            android:id="@+id/otherdiseasetxtLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/otherdisease">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/otherdiseasetxt"
                                style="@style/TextInputStyleBox" />

                        </com.google.android.material.textfield.TextInputLayout>




                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</RelativeLayout>