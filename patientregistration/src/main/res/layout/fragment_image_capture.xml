<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentframeLayout"
 >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">
        <LinearLayout
            android:id="@+id/id_imageview_Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="left"
            android:orientation="horizontal"
            android:layout_weight="0.9"
            android:padding="5dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/selected_recycler_img_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/id_capture_image"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="0.1"
            android:layout_gravity="right|center"
            android:layout_margin="5dp"
            android:background="@drawable/ic_capture_image"/>
<!--        <TextView-->
<!--            android:id="@+id/id_capture_image_txt"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:gravity="center"-->
<!--            android:text="@string/imgcapture"-->
<!--            android:textColor="@color/black"-->
<!--            android:textStyle="bold" />-->

    </LinearLayout>
</FrameLayout>